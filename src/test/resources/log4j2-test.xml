<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} thread_id=%tid thread_name=%tn thread_priority=%tp %-5level %logger{25} - %msg %n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.dlabs71.library.email" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>